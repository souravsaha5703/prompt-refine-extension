{
  "manifest_version": 3,
  "name": "AI Prompt Enhancer",
  "version": "1.0",
  "description": "Enhance text input on chatbot sites",
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://chatgpt.com/*",
        "*://www.perplexity.ai/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/extension-icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}